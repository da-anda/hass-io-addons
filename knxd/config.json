{
  "name": "KNXD daemon",
  "version": "0.3.5",
  "slug": "knxd",
  "description": "KNXD daemon you can use to create a KNX/IP gateway via TPUART or USB bus adapters",
  "startup": "services",
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "armv7",
    "i386"
  ],
  "boot": "auto",
  "hassio_api": false,
  "host_network": true,
  "privileged": [
    "SYS_MODULE",
    "SYS_RAWIO"
  ],
  "devices": [
    "/dev/bus/usb:/dev/bus/usb:rwm",
    "/dev/mem:/dev/mem:rw"
  ],
  "options": {
    "address": "0.0.1",
    "client_address": "0.0.2:10",
    "interface": "tpuart",
    "device": "/dev/ttyACM0",
    "usb_filters": "",
    "custom_config": ""
  },
  "schema": {
    "interface": "str",
    "address": "str",
    "client_address": "str?",
    "device": "str?",
    "usb_filters": "str?",
    "custom_config": "str?"
  },
  "ports": {
    "6720/tcp": 6720,
    "3671/udp": 3671
  },
  "ports_description": {
      "6720/tcp": "Required by knx interface and being able to access the KNX bus via ETS",
      "3671/tcp": "Required by knx interface and being able to access the KNX bus via ETS"
  },
  "auto_uart": true,
  "hassio_role": "admin"
}
